#!/bin/bash

# create files

openssl rand -out file-xs.txt 100
openssl rand -out file-s.txt 10000
openssl rand -out file-m.txt 1000000
openssl rand -out file-lg.txt 100000000

# cipher algorithms

declare -A ALGOS=(
  [DES_CBC]="des-cbc;6789098765432121;6789098765431221"
  [DES_EDE3]="des-ede3;6789098765432121;6789098765431221"
  [RC_4]="rc4;6789098765432121"
  [AES_128]="aes-128-cbc;12345678909876543212345678909876;12345432123456789786543823476234"
  [AES_192]="aes-192-cbc;"
  [AES_256]="aes-256-cbc;"
  [CHACHA_20]="chacha20;"
)

IFS=';'

for key in "${!ALGOS[@]}" 
do
  algo=${ALGOS[$key]}
  read -ra tokens <<< "$algo"
  for i in "${!tokens[@]}"
  do
    echo "${tokens[$i]}"
  done
done


# remove files

rm file-xs.txt
rm file-s.txt
rm file-m.txt
rm file-lg.txt
